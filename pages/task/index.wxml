<!--index.wxml-->
<view class="swiper-tab">  
    <view class="swiper-tab-list num_badge {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">待审批<view class="num_badge_count">12</view></view>  
    <view class="swiper-tab-list num_badge {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">共享池<view class="num_badge_count">2</view></view>  
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">已审批</view>  
    <view class="swiper-tab-list {{currentTab==3 ? 'on' : ''}}" data-current="3" bindtap="swichNav">我的申请</view>  
</view> 
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">
  <swiper-item>
    <view>待审批</view>
  </swiper-item>
  <swiper-item>
    <view>共享池</view>
  </swiper-item>
  <swiper-item>
    <view>已审批</view>
  </swiper-item>
  <swiper-item>
    <view>我的申请</view>
  </swiper-item>
</swiper>